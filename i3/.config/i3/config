#            inactive_workspace  #181818 #181818 #FFFFFF
#            urgent_workspace    #2F343F #EBCB8B #2F343F
#        } 
#}

# GAPS

gaps outer 8
gaps inner 8

# BORDERS

for_window [class="^.*"] border pixel 3 
new_window pixel 4

# START

exec --no-startup-id polybar example -r
exec --no-startup-id setxkbmap us
exec --no-startup-id feh --bg-fill /home/alison/wallpaper.jpeg
exec --no-startup-id picom -b -f
